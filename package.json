{
  "name": "react-sampler",
  "version": "0.1.0",
  "description": "react-sampler allows you to easily launch sound samples from key events",
  "main": "index.js",
  "scripts": {
    "build-lib": "jsx -x jsx src/ lib/",
    "build-dist": "browserify -t [reactify --es6] src/ReactSampler.jsx -o dist/react-sampler.js",
    "build-example": "browserify -t [reactify --es6] examples/src/index.jsx -o examples/dist/index.js",
    "watch": "jsx -w -x jsx src/ lib/",
    "watch-example": "watchify -t [reactify --es6] examples/src/index.jsx -o examples/dist/index.js",
    "run-example": "http-server examples/dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ruiramos/react-sampler.git"
  },
  "author": "Rui Ramos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ruiramos/react-sampler/issues"
  },
  "homepage": "https://github.com/ruiramos/react-sampler",
  "dependencies": {
    "react": "~0.13.1"
  },
  "devDependencies": {
    "watchify": "~3.1.0",
    "browserify": "~9.0.7",
    "reactify": "~1.1.0"
  },
  "keywords": [
    "react",
    "react-component"
  ]
}
